<h1>THIS IS PROFILE PAGE</h1>

<form action="/post/create" method="POST">
    <textarea name="content" id="" cols="30" rows="3"></textarea>
    <input type="submit" name="" value="POST" id="">
</form>


<div>
    <% if(locals.user){%>

        <% for(post of posts ) {%>
            
            <li>
                <p>
                    <%=post.content%> <br>
                    <%=post.user.name%> <br>
                </p>
            </li>
            <div>
                <form action="/comment/create" method="POST">
                    <input type="text" name="content" id="">
                    <input type="hidden" name="post" value="<%= post._id%>"id="">
                    <input type="submit" value="Add Comment" id="">
                </form>
            </div>


            <div>
                <ul id="<%=post._id%>">
                    <% for(comment of post.comments){%>
                        <p>
                            <%=comment.content%>
                            <br>
                            <small>
                                <%=comment.user.name%>
                            </small>
                        </p>
                    <%}%>
                </ul>
            </div>

        <%}%>

    <%}%>
</div>